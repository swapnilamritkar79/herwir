{{!
    @template block_mycourses/inprogress-view

    This template renders the inprogress view for the myoverview block.

    Example context (json):
    {}
}}
<div id="allview" class="viewall"><a href="{{allview.wwwroot}}/blocks/mycourses/viewall.php?flag={{flag}}">View All</a></div>
<div id="recommend-view-{{uniqid}}"  class="owl-carousel owl-theme">

  
   {{#recommendview.courses}}
        <div class="item">
                    <div class="courecontent">
                        <div class="courseimage">
                              <a href="{{ url }}"><img class="imgresponsive" src="{{ image }}" ></a>
                        </div>                     
                            <div class="name">
                                <h4 class="title">
                                    <a href="{{ url }}">{{ fullname }}</a>
                                </h4>
                            </div>
                            <div class="dec ">
                                {{ summary}}
                            </div>
                        
                            
                    </div>

        </div>



   {{/recommendview.courses}}

</div>
{{#js}}
require(['jquery', 'core/custom_interaction_events'], function($, customEvents) {
    var root = $('#recommend-view-{{uniqid}}');
    customEvents.define(root, [customEvents.events.activate]);
    root.on(customEvents.events.activate, '[data-toggle="btns"] > .btn', function() {
        root.find('.btn.active').removeClass('active');
    });
}); 


{{/js}}
